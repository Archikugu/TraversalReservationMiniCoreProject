@model AnnouncementUpdateDto
@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Update Announcement Page</h1>

<form method="post">
    <input type="hidden" asp-for="AnnouncementId" /> 
    <label>Announcement Title</label>
    <input type="text" asp-for="Title"class="form-control" /> 
    <br />
    <label>Announcement Content</label>
    <input type="text" asp-for="Content" class="form-control" />
    <br />

    <button class="btn btn-outline-primary">Update Announcement</button>
</form>


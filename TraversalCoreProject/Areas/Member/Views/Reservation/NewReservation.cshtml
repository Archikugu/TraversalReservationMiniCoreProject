@model Entity.Concrete.Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<script>
    window.onload = (function () {
        alert('Waiting to confirm your reservation.Do not forget to follow the "My Current Reservations" menu for the reservation confirmation process');
    });
</script>

<h1>New Reservation Page</h1>
<form method="post">
    @*<div class="form-group">
        @Html.Label("Location")
        @Html.DropDownListFor(x=>x.Destination,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
    </div>*@
    <div class="form-group">
        @Html.Label("Person Count")
        <input type="text" asp-for="PersonCount" class="form-control"/>
    </div>
    <div class="form-group">
        @Html.Label("Date")
        <input type="date" asp-for="ReservationDate" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Descriptions")
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <button class="btn btn-outline-success">
        Make a reservation
    </button>
</form>

@model ResetPasswordViewModel
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <br />
    <h2>Password Change Page</h2>
    <form method="post">
        <label>Please entry password:</label>
        <input type="text" class="form-control" asp-for="Password" />
        <br />
        <label>Please entry confirm password:</label>
        <input type="text" class="form-control" asp-for="ConfirmPassword" />
        <br />
        <button class="btn btn-primary">Update Password</button>
    </form>
</div>
